<h1>liste des articles</h1>
<table border="1">
    <tr>
        <td>Name</td>
        <td>Price</td>
        <td>Quantity</td>
        <td>Image</td>

    </tr>
    {% for article in articles %}
    <tr>
        <td>{{ article.name }}</td>
        <td>{{ article.price }}</td>
        <td>{{ article.quantity }}</td>
        <td><img src="{{ article.image }}" height="150px" width="150px"></td>
        <td>
            <ul>
                <li>
                    <a href="#">affiche</a>
                </li>
                <li>
                    <a href="#">modifier</a>
                </li>
                <li>
                    <a href="{{ path('supprimer', {'id':article.id})}}">supprimer</a>
                </li>
            </ul>
        </td>

    </tr>
    {% endfor %}
</table>